{
	"sourceType": "module",
	"source": {
		"include": ["src"],
		"includePattern": ".+\\.js$",
		"excludePattern": "(node_modules|dist|tests)"
	},
	"opts": {
		"destination": "./docs/jsdocs",
		"recurse": true,
		"readme": "./README.md",
		"verbose": true
	},
	"plugins": ["plugins/markdown"],
	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
	}
}
