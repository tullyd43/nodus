{
	"name": "nodus-v7",
	"version": "7.1.0",
	"type": "module",
	"description": "Nodus - Enhanced Grid System with Composable Architecture",
	"main": "src/main.js",
	"scripts": {
		"dev": "vite --config ./tools/vite/vite.config.js",
		"build": "vite build --config ./tools/vite/vite.config.js",
		"preview": "vite preview --config ./tools/vite/vite.config.js",
		"test": "vitest --config ./tools/vite/vite.config.js",
		"test:run": "vitest run --config ./tools/vite/vite.config.js",
		"test:ui": "vitest --ui --config ./tools/vite/vite.config.js",
		"test:coverage": "vitest run --coverage --config ./tools/vite/vite.config.js",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "npx eslint . --ext .js,.mjs",
		"lint:fix": "npx eslint . --ext .js,.mjs --fix",
		"lint:secure": "ESLINT_MODE=tolerant npx eslint . --ext .js,.mjs --fix",
		"lint:strict": "npx eslint . --ext .js,.mjs",
		"format": "prettier --write \"src/**/*.{js,css,html}\"",
		"format:check": "prettier --check \"src/**/*.{js,css,html}\"",
		"typecheck": "tsc --noEmit",
		"docs:generate": "jsdoc -c jsdoc.json",
		"docs:check": "node scripts/ci/jsdoc-check.js",
		"docs:serve": "http-server ./docs -p 8080",
		"analyze": "vite-bundle-analyzer dist",
		"size": "bundlesize",
		"lighthouse": "lhci autorun",
		"clean": "rimraf dist coverage .nyc_output docs",
		"clean:deps": "rimraf node_modules package-lock.json && npm install",
		"prepare": "husky install",
		"start": "npm run dev",
		"scan": "node scripts/ci/scan.js",
		"security:prepush": "node scripts/security-prepush.js",
		"security:review": "node scripts/security-review.js",
		"sec:keys:init": "node scripts/security-keys-init.js",
		"sec:allow:sign": "node scripts/security-allowlist-sign.js",
		"sec:allow:verify": "node scripts/security-allowlist-verify.js",
		"sec:attest:gen": "node scripts/security-attest-gen.js",
		"sec:attest:verify": "node scripts/security-attest-verify.js",
		"quickfix:secure-wrap": "node scripts/quickfix-secure-wrap.js",
		"quickfix:secure-refactor": "node scripts/secure-refactor-dom.js",
		"validate": "npm run lint && npm run format:check && npm run typecheck && npm run test:run && npm run docs:check && npm run scan",
		"ci": "npm run validate && npm run build && npm run size && npm run sec:allow:verify && npm run sec:attest:verify",
		"release": "npm run ci && npm version patch",
		"setup": "node scripts/setup.js"
	},
	"imports": {
		"#tools/*": "./tools/*"
	},
	"keywords": [
		"grid-system",
		"composable-architecture",
		"vanilla-javascript",
		"jsdoc",
		"offline-first",
		"enterprise"
	],
	"author": {
		"name": "Nodus Team",
		"email": "team@nodus.dev",
		"url": "https://nodus.dev"
	},
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@playwright/test": "^1.48.0",
		"@tauri-apps/cli": "^2.9.3",
		"@types/node": "^22.9.0",
		"@vitest/coverage-v8": "^4.0.5",
		"@vitest/ui": "^4.0.5",
		"chart.js": "^4.4.6",
		"eslint": "^9.38.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^50.5.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^15.12.0",
		"http-server": "^14.1.1",
		"jsdoc": "^4.0.4",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"rollup-plugin-visualizer": "^5.12.0",
		"typescript": "^5.6.3",
		"vite": "^7.1.12",
		"vitest": "^4.0.5"
	},
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"overrides": {
		"iltorb": "npm:zlib",
		"github-build": "npm:github-build@latest",
		"bundlesize": "npm:bundlesize@latest",
		"@lhci/cli": "npm:@lhci/cli@latest"
	},
	"volta": {
		"node": "22.17.0",
		"npm": "11.6.2"
	},
	"bundlesize": [
		{
			"path": "./dist/**/*.js",
			"maxSize": "50kb",
			"compression": "gzip"
		},
		{
			"path": "./dist/**/*.css",
			"maxSize": "10kb",
			"compression": "gzip"
		}
	]
}
